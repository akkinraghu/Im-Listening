{
  "name": "im-listening",
  "version": "1.0.0",
  "description": "Voice transcription and semantic search application",
  "main": "index.js",
  "scripts": {
    "dev": "next dev -p 3007",
    "build": "DISABLE_ESLINT_PLUGIN=true next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck",
    "prepush": "npm run check",
    "db:migrate": "ts-node --project src/scripts/tsconfig.json src/scripts/migrate.ts up",
    "db:rollback": "ts-node --project src/scripts/tsconfig.json src/scripts/migrate.ts down",
    "docker:dev": "docker-compose down && docker-compose up --force-recreate",
    "docker:dev:incremental": "docker-compose up",
    "docker:build": "docker-compose build",
    "docker:down": "docker-compose down",
    "docker:restart": "docker-compose restart app",
    "pmc:update": "ts-node --project src/scripts/tsconfig.json src/scripts/update-pmc-articles.ts",
    "pmc:update:pg": "ts-node --project src/scripts/tsconfig.json src/scripts/update-pmc-articles-pg.ts",
    "pmc:scheduler": "ts-node --project src/scripts/tsconfig.json src/scripts/scheduler.ts",
    "pmc:scheduler:pg": "ts-node --project src/scripts/tsconfig.json src/scripts/scheduler-pg.ts",
    "pmc:update-now": "ts-node --project src/scripts/tsconfig.json src/scripts/scheduler.ts --run-now",
    "pmc:update-now:pg": "ts-node --project src/scripts/tsconfig.json src/scripts/scheduler-pg.ts --run-now",
    "db:migrate-to-pg": "node src/scripts/migrate-to-postgres.js",
    "db:migrate-mongo-to-pg": "node src/scripts/migrate-mongo-to-postgres.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@deepgram/sdk": "^3.12.1",
    "@langchain/openai": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.14.1",
    "@types/pg": "^8.11.13",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "axios": "^1.6.7",
    "dotenv": "^16.5.0",
    "jest": "^29.7.0",
    "mongodb": "^6.15.0",
    "mongoose": "^8.13.2",
    "next": "^15.3.0",
    "next-auth": "^5.0.0-beta.25",
    "node-cron": "^3.0.3",
    "openai": "^4.95.1",
    "pg": "^8.15.6",
    "pgvector": "^0.1.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.26.0",
    "eslint-config-next": "^15.3.1",
    "husky": "^9.1.7",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2"
  }
}
